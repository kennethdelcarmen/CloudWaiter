      <script>
        var url=window.location.href;
        url1=url.indexOf("/orders");
        url2=url.indexOf("/about");
        $(document).ready(function(){
          if(url1!=-1){
            $("#ordertab").addClass("active");
          }else if(url2!=-1){
            $("#abouttab").addClass("active");
          }else{
            $("#home").addClass("active");
          }
        });

      </script>
      <ul class="nav navbar-nav" id="tabs">
        <li id="home"><a href="/" id="homelink">Home</a></li>
        <li id="ordertab"><a href='/orders#orders' id="orderlink">My Orders</a></li>
        <li id="abouttab"><a href='/about' id="aboutlink">About Us</a></li>
      </ul>
